<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/cartes"
    android:layout_height="match_parent"
    tools:context="com.ouahab.gp.PointsCardinauxActivity">


    <TextView
        android:id="@+id/titre"
        android:layout_width="0dp"
        android:layout_height="33dp"
        android:text="LES POINTS CARDINAUX"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="24sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="72dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/points"
        android:src="@drawable/points"
        android:layout_width="0dp"
        android:layout_height="247dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="51dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="51dp"
        android:layout_marginRight="51dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.454"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/enonce"
        android:src="@drawable/enonce"
        android:layout_width="0dp"
        android:layout_height="89dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/nord"
        android:layout_width="22dp"
        android:layout_height="50dp"
        android:hint=""
        android:maxLength="1"
        android:textAlignment="center"
        android:background="@drawable/edittext"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/points"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/titre"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/ouest"
        android:layout_width="22dp"
        android:layout_height="50dp"
        android:hint=""
        android:maxLength="1"
        android:textAlignment="center"
        android:background="@drawable/edittext"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/points"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/points"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"/>

    <EditText
        android:id="@+id/est"
        android:layout_width="22dp"
        android:layout_height="50dp"
        android:hint=""
        android:maxLength="1"
        android:textAlignment="center"
        android:background="@drawable/edittext"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/points"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/points"
        app:layout_constraintLeft_toRightOf="@+id/points" />

    <EditText
        android:id="@+id/sud"
        android:layout_width="22dp"
        android:layout_height="50dp"
        android:hint=""
        android:maxLength="1"
        android:textAlignment="center"
        android:background="@drawable/edittext"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        app:layout_constraintTop_toBottomOf="@+id/points"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintHorizontal_bias="0.509" />

    <Button
        android:id="@+id/valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:text="Valider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:ignore="HardcodedText"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_button"
        />

    <FrameLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/games"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

    </FrameLayout>
</android.support.constraint.ConstraintLayout>
